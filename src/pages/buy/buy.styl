.u-buy
  .flex-wrap
    display flex
    flex-direction column
    height 100%
    .buy-input
      margin 60px 10px 5px
    .buy-list
      position relative
      flex 1
      .buy-list-scroll
        height 100%
    .tip
      margin 0 0 10px 10px
      
  .index-icons
    text-align center
    margin 10px
    border-radius 20px
    background #fff
    padding 0 5px
    li
      float left
      width 25%
      height 35px
      
  .others-icons
    background $bg
    li
      width 33%
      padding 5px 10px
      span
        display inline-block
        width 100%
        padding 2px
        background #fff
        border-radius 15px
      
  .button-wrap
    margin 5% 15%
    .button
      width 100%
      margin 0
      font-size 16px
      color #fff
      background $main
  .buy-cart
    margin 0 10px
    .buy-address
      position relative
      overflow hidden
      background #fff
      label
        padding 0 10px
        display block
        height 35px
        line-height 35px
      input
        display block
        position absolute
        top 0
        left 80px
        right 10px
        width 70%
    .info
      padding 15px 10px
      
  .cart-tip
    text-align right
    float left
    margin-left 15px
    
  .small
    font-size 10px
      
      