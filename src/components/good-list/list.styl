.u-list
  .img
    float left
    width 60px
    height 60px
    border-radius 100px
    img
      width 100%
      height 100%
      border-radius 100px
      
  .info-wrap
    position absolute
    left 90px
    right 20px
    font-size 12px
    color #808080
    .name
      display inline-block
      width 100%
      font-size 17px
      color #333
      overflow hidden
      text-overflow ellipsis
    .distance
      float right
    .send-divide
      padding 0 8px
      color #e6e6e6
  .top
    position absolute
    top 12px
    right 20px
    width 35px
    text-align center
    color #6e96c7
    .top-header
      border-radius 5px 5px 0 0
      background rgba(97, 157, 229, 0.4)
    .top-body
      background #d4efff

.divider
  text-align center
  font-size 18px
  background #fff
  overflow hidden

.u-hot-list
  white-space nowrap
  width auto
  text-align center
  .u-item
    display inline-block
    float none
    margin 0
    padding-top 15px
    border none
  img
    display block
    width 100px
    height 75px
    margin 0 auto
    border-radius 10px
    border solid 1px #ccc
  .u-name
    font-size 12px
    overflow hidden
    text-overflow ellipsis
  .u-price
    color #619de5
    font-size 13px
    text-indent -3px