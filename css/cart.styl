@import 'base.styl'

.button-cart-wrap
  position absolute
  bottom 20px
  right 10px
.button-cart
	color #fff
	background $bl;
.button-cart-action-wrap
  width 100px
  line-height 30px
	.button-cart-number, .cart-action
		display inline-block
		width 30px
		height 30px
		text-align center
		border-radius 30px

.cart-modal-icon
	position absolute
	.icon-cart
	  padding-left 40px
	  font-size 25px
	  line-height 45px
	  color $bl
  .cart-number-tip
	  position absolute
	  top 0
	  left 55px
	  width 20px
	  height 20px
	  background $bl
	  border-radius 50px
	  color #fff
	  font-weight bold
	  text-align center
	  overflow hidden

.cart-item
  line-height 25px
  width 100%
  padding 5px 0
  border none
	
.orders-list
	&.item
		margin-bottom 10px
		border none
	.item-content
		padding 15px 20px
	.item
		float left
		padding 10px 20px 10px 0
		border none
	.list-order-id
		text-indent -8px
	.list-money
		margin-right 5px
	.order-list-good-img
		width 52px
		height 45px
		border solid 1px #eee
		border-radius 15px;
	.more-goods
		padding 20px 5px
		background $gbl
		li
			float left
			width 10px
			height 10px
			background #999
			border-radius 10px
			&:nth-child(2)
				margin 0 4px
	.order-action
		div
			margin 5px 0
	  

